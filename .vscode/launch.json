    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Ladder Update",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "ladder_update"
            ],
            "django": true
        },
        {
            "name": "Django: Webserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
            ],
        },
        {
            "name": "Python: Discord Test Bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/discordbot/bot.py",
            "console": "integratedTerminal",
            "env": {
                "DISCORD_TEST": "True",
                "BOT_PATH": "/workspaces/HomeSite"
            }
        },
        {
            "name": "Python: Discord Main Bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/discordbot/bot.py",
            "console": "integratedTerminal",
            "env": {
                "BOT_PATH": "/workspaces/HomeSite"
            }
        }
    ]
}